{% extends 'base.html.twig' %}

{% block title %}
	{{ question.title }}
	- Zelda QCM
{% endblock %}

{% block body %}
	<header class="question-header">
		<h1>{{ zone.name }}</h1>
		<p class="zone-subtitle">{{ question.title }}</p>
	</header>

	<main class="question-main">
		<aside class="player-status-sidebar">
			<div class="hearts-display">
				<span class="label">C≈ìurs:</span>
				<div class="hearts-container">
					{% for i in 1..5 %}
						<span class="heart{% if i <= hearts %} active{% endif %}">‚ù§Ô∏è</span>
					{% endfor %}
				</div>
			</div>

			<div class="points-display">
				<span class="label">Points:
					{{ points }}</span>
			</div>
		</aside>

		<section class="question-section">
			<div class="question-card">
				<h2>{{ question.title }}</h2>
				<p class="description">{{ question.description }}</p>

				<div class="options">
					<form action="{{ path('game_answer_question', {'questionId': question.id}) }}" method="post" class="question-form">
						<label class="option">
							<input type="radio" name="answer" value="A" required>
							<span>A)
								{{ question.optionA }}</span>
						</label>

						<label class="option">
							<input type="radio" name="answer" value="B">
							<span>B)
								{{ question.optionB }}</span>
						</label>

						<label class="option">
							<input type="radio" name="answer" value="C">
							<span>C)
								{{ question.optionC }}</span>
						</label>

						<label class="option">
							<input type="radio" name="answer" value="D">
							<span>D)
								{{ question.optionD }}</span>
						</label>
						<a href="{{ path('game_zone', {'zoneId': zone.id}) }}" class="btn-back">‚Üê Retour</a>

						<button type="submit" class="btn btn-submit">R√©pondre</button>
					</form>
				</div>

				<div class="rewards">
					{% if question.rewardHearts > 0 %}
						<span class="reward hearts">+{{ question.rewardHearts }}
							‚ù§Ô∏è</span>
					{% endif %}
					{% if question.rewardPoints > 0 %}
						<span class="reward points">+{{ question.rewardPoints }}
							üí∞</span>
					{% endif %}
					{% if question.penaltyHearts > 0 %}
						<span class="penalty hearts">-{{ question.penaltyHearts }}
							‚ù§Ô∏è</span>
					{% endif %}
				</div>
			</div>
		</section>
	</main>

	{% if app.flashes %}
		<div class="flash-messages">
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }}">{{ message }}</div>
				{% endfor %}
			{% endfor %}
		</div>
	{% endif %}

{% endblock %}
