{% extends 'base.html.twig' %}

{% block title %}Game Over - Zelda QCM{% endblock %}

{% block body %}
<main class="game-over-container">
	<header class="game-over-header">
		<h1 class="game-over-title">GAME OVER</h1>
		<p class="subtitle">Vous avez perdu tous vos cœurs</p>
	</header>

	<section class="game-over-stats">
		<div class="stat-card">
			<h3>Résumé</h3>
			<p class="stat-item">
				<span class="label">Cœurs:</span>
				<span class="value">{{ hearts }}/5</span>
			</p>
			<p class="stat-item">
				<span class="label">Points obtenus:</span>
				<span class="value">{{ points }}</span>
			</p>
		</div>
	</section>

	<section class="game-over-actions">
		<h2>Que voulez-vous faire?</h2>

		<div class="action-buttons">
			<form action="{{ path('game_new') }}" method="post">
				<button type="submit" class="btn btn-primary">Recommencer</button>
			</form>

			<a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
		</div>
	</section>
</main>

{% endblock %}
