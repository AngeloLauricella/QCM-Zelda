{% extends "base.html.twig" %}

{% block title %}Éditer Image - QCM-Zelda{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-4">
                    <h1 class="card-title mb-4">✏️ Éditer l'Image</h1>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.title) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="mb-3">
                            <img src="{{ asset(gallery.imagePath) }}" class="img-thumbnail mb-3" alt="{{ gallery.title }}" style="max-width: 200px;">
                            
                            {{ form_label(form.imagePath, 'Nouvelle Image (optionnel)', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.imagePath) }}
                            {{ form_errors(form.imagePath) }}
                            <small class="form-text text-muted d-block mt-2">
                                Laissez vide pour conserver l'image actuelle.
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_gallery_index') }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Mettre à Jour</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
