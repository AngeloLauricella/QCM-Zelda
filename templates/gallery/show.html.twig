{% extends "base.html.twig" %}

{% block title %}{{ gallery.title }} - QCM-Zelda{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <img src="{{ asset(gallery.imagePath) }}" class="img-fluid rounded mb-4" alt="{{ gallery.title }}">
            
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">{{ gallery.title }}</h1>
                    <p class="text-muted">
                        Ajoutée le {{ gallery.createdAt|date('d/m/Y H:i:s') }}
                    </p>
                    
                    <div class="btn-group mt-3" role="group">
                        <a href="{{ path('app_gallery_edit', {id: gallery.id}) }}" class="btn btn-warning">
                            ✏️ Éditer
                        </a>
                        <a href="{{ path('app_gallery_index') }}" class="btn btn-secondary">
                            ← Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
