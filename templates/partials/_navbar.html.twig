					</a>
				</li>

				{% if is_granted('ROLE_USER') %}
					<li class="nav-item">
						<a href="{{ path('question_show', {'category': 'introduction'}) }}" class="{% if app.request.attributes.get('_route') == 'question_show' %}active{% endif %}">
