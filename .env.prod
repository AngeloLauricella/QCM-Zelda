# Production environment variables for Railway
# =============================================
# ðŸ”§ All sensitive values MUST be set in Railway dashboard, not here

###> symfony/framework-bundle ###
# ðŸ”§ MUST be overridden by Railway environment variable
APP_ENV=prod
APP_DEBUG=0
APP_SECRET=${APP_SECRET}
APP_SHARE_DIR=var/share
###< symfony/framework-bundle ###

###> symfony/routing ###
# ðŸ”§ Update with your Railway app domain
DEFAULT_URI=https://${RAILWAY_DOMAIN}
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# ðŸ”§ Railway MySQL connection - DATABASE_URL must be set as environment variable
# Format: mysql://user:password@host:port/database?serverVersion=8.0.32&charset=utf8mb4
DATABASE_URL=${DATABASE_URL}
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
# ðŸ”§ Use database transport for messaging
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
# ðŸ”§ Configure SMTP if needed (mailgun, sendgrid, etc)
MAILER_DSN=null://null
###< symfony/mailer ###

# ðŸ”§ Production-specific settings
TRUSTED_PROXIES=*
TRUSTED_HOSTS=^(.+\.)?railway\.app$
